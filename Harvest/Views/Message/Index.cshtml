@using Models
@model List<Models.Message>

<h2 class="text-center my-4">كل الرسائل</h2>

<div class="container">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>الاسم</th>
                    <th>الهاتف</th>
                    <th>المحتوى</th>
                    <th>تاريخ الإرسال</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var message in Model)
                {
                    <tr>
                        <td>@message.Name</td>
                        <td>@message.Phone</td>
                        <td>@message.MessageContent</td>
                        <td>@message.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
