@using Models
@model Models.BlogPost

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">تحرير المقالة</h3>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <div class="mb-3">
                    <label for="Title" class="form-label fw-bold">عنوان المقالة</label>
                    <input type="text" class="form-control shadow-sm" id="Title" name="Title" value="@Model.Title" required placeholder="أدخل عنوان المقالة" />
                </div>
                <div class="mb-3">
                    <label for="Content" class="form-label fw-bold">محتوى المقالة</label>
                    <textarea class="form-control shadow-sm" id="Content" name="Content" rows="6" required placeholder="أدخل محتوى المقالة">@Model.Content</textarea>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save"></i> حفظ
                    </button>
                    <a href="@Url.Action("Index", "Article")" class="btn btn-secondary px-4">
                        <i class="fas fa-arrow-left"></i> الرجوع إلى القائمة
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
