@using Models
@model Models.BlogPost

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-body">
            <h2 class="card-title text-center text-primary mb-4">@Model.Title</h2>
            <p class="text-muted">
                <strong>تاريخ الإنشاء:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")
            </p>
            <hr>
            <div class="content p-3 bg-light rounded">
                @Html.Raw(Model.Content)
            </div>
            <div class="text-center mt-4">
                <a href="@Url.Action("Index", "Article")" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i> الرجوع إلى القائمة
                </a>
            </div>
        </div>
    </div>
</div>
