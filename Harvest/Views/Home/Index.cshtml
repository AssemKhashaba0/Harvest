<main role="main" class="pb-3">
    <!-- قسم الخلفية مع النص -->
    <div id="about-us" class="container-fluid my-5 p-5" style="background-image: url('@Model.HomePage.SliderImage1'); background-size: cover; background-position: center;">
        <div class="text-white text-center py-5" style="background-color: rgba(0, 0, 0, 0.6);">
            <h2 class="mb-4">عن الشركة</h2>
            <p class="fs-5">@Model.HomePage.CompanyOverview</p>
        </div>
    </div>

    <!-- ساليدر الصور -->
    <div id="image-slider" class="carousel slide my-4" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="@Model.HomePage.SliderImage1" class="d-block w-100" alt="صورة 1">
            </div>
            <div class="carousel-item">
                <img src="@Model.HomePage.SliderImage2" class="d-block w-100" alt="صورة 2">
            </div>
            <div class="carousel-item">
                <img src="@Model.HomePage.SliderImage3" class="d-block w-100" alt="صورة 3">
            </div>
        </div>
        <a class="carousel-control-prev" href="#image-slider" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bg-dark rounded-circle" aria-hidden="true"></span>
            <span class="visually-hidden">السابق</span>
        </a>
        <a class="carousel-control-next" href="#image-slider" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon bg-dark rounded-circle" aria-hidden="true"></span>
            <span class="visually-hidden">التالي</span>
        </a>
    </div>

    <!-- نبذة عن الشركة -->
    <div id="about-us" class="container my-5">
        <h2 class="text-center mb-4">نبذة عن الشركة</h2>
        <p class="text-center fs-5">@Model.HomePage.CompanyOverview</p>
    </div>

    <!-- اقسامنا -->
    <div id="products" class="container my-5">
        <h2 class="text-center mb-4">اقسامنا</h2>
        <div class="product-grid">
            @foreach (var category in Model.Categories)
            {
                <div class="product-item">
                    <a href="/Products/UserProducts?categoryId=@category.Id" class="text-decoration-none text-dark">
                        <img src="@category.ImageUrl" alt="@category.Name">
                        <p>@category.Name</p>
                    </a>
                </div>
            }
        </div>
    </div>


    <!-- اتصل بنا -->
    <div id="contact-us" class="container my-5">
        <h2 class="text-center mb-4">اتصل بنا</h2>
        <div class="text-center">
            <a href="https://wa.me/@Model.HomePage.WhatsAppNumber" class="btn btn-success mx-2">
                <i class="fab fa-whatsapp"></i> واتساب
            </a>
            <a href="mailto:@Model.HomePage.Email" class="btn btn-primary mx-2">
                <i class="fas fa-envelope"></i> البريد الإلكتروني
            </a>
            <a href="tel:+@Model.HomePage.ContactNumber" class="btn btn-secondary mx-2">
                <i class="fas fa-phone-alt"></i> رقم الهاتف
            </a>
            <a href="/Message/Create" class="btn btn-secondary mx-2">
                <i class="fas fa-paper-plane"></i> أرسل رسالة
            </a>
        </div>
    </div>

    <!-- أزرار وسائل التواصل الاجتماعي -->
    <div class="my-5 text-center">
        <h2 class="text-center mb-3">تابعنا على</h2>
        <a href="@Model.HomePage.FacebookLink" class="mx-2 text-primary"><i class="fab fa-facebook fa-3x"></i></a>
        <a href="@Model.HomePage.YouTubeLink" class="mx-2 text-danger"><i class="fab fa-instagram fa-3x"></i></a>
        <a href="https://www.linkedin.com" class="mx-2 text-info"><i class="fab fa-linkedin fa-3x"></i></a>
    </div>
</main>

<style>
    .hero-section {
        position: relative;
        height: 400px;
        color: white;
        background-color: rgba(0, 0, 0, 0.7);
    }

    .hero-text {
        text-shadow: 3px 3px 10px rgba(0, 0, 0, 0.8);
    }

    .carousel-inner img {
        object-fit: cover;
        height: 500px;
    }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        justify-items: center;
    }

    .product-item {
        text-align: center;
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .product-item img {
            width: 100%;
            border-radius: 10px;
            object-fit: cover;
            height: 200px;
        }

        .product-item:hover {
            transform: scale(1.05);
        }
</style>
