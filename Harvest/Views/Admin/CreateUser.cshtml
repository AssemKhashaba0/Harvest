@{
    ViewData["Title"] = "إنشاء مستخدم جديد";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreateUser" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="username" class="form-label">البريد الإلكتروني</label>
        <input type="email" id="username" name="username" class="form-control" placeholder="أدخل البريد الإلكتروني" required />
        <div class="invalid-feedback">
            من فضلك أدخل بريدًا إلكترونيًا صالحًا.
        </div>
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">كلمة المرور</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="أدخل كلمة المرور" required minlength="6" />
        <div class="invalid-feedback">
            من فضلك أدخل كلمة مرور لا تقل عن 6 أحرف.
        </div>
    </div>

    <button type="submit" class="btn btn-primary">إنشاء المستخدم</button>
</form>
<script>
    (function () {
        'use strict';
        const forms = document.querySelectorAll('.needs-validation');
        Array.from(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>
